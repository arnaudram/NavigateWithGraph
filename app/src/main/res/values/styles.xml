<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
      <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>


    </style>


    <style name="buttonStyle" parent="TextAppearance.AppCompat.Widget.Button">

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/black_ops_one</item>
    </style>

    <style name="edit_input_name">
        <item name="android:fontFamily">@font/emblema_one</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_forward_black_24dp</item>
        <item name="android:drawableTint" tools:targetApi="m">#ffffff</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textAppearance">@style/buttonStyle</item>
    </style>

</resources>
